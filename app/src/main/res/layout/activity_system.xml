<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Решение системы уравнений:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="14dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a₁x + b₁y = c₁"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a₂x + b₂y = c₂"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/editTextA1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="a₁"
            android:inputType="numberDecimal"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/editTextB1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="b₁"
            android:inputType="numberDecimal"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/editTextC1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="c₁"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/editTextA2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="a₂"
            android:inputType="numberDecimal"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/editTextB2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="b₂"
            android:inputType="numberDecimal"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/editTextC2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="c₂"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnSolveSystem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Решить систему"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/textResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textStyle="italic"/>

    </LinearLayout>
</ScrollView>